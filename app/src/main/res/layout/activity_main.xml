<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/tv_p1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="24dp"
    android:text="Player 1: 0"
    android:textSize="30sp"
    android:freezesText="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/tv_p2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="24dp"
    android:text="Player 2: 0"
    android:textSize="30sp"
    android:freezesText="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_p1"/>


  <Button
    android:id="@+id/bt_reset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="reset"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/tv_p2"
    app:layout_constraintTop_toTopOf="parent"/>

  <Button
    android:id="@+id/bt_00"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="60dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toTopOf="@id/bt_10"
    app:layout_constraintEnd_toStartOf="@+id/bt_01"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_p2"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintVertical_weight="1"/>

  <Button
    android:id="@+id/bt_01"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="60dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toTopOf="@id/bt_11"
    app:layout_constraintEnd_toStartOf="@+id/bt_02"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@id/bt_00"
    app:layout_constraintTop_toBottomOf="@+id/tv_p2"
    app:layout_constraintVertical_weight="1"/>

  <Button
    android:id="@+id/bt_02"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="60dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toTopOf="@id/bt_12"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@id/bt_01"
    app:layout_constraintTop_toBottomOf="@+id/tv_p2"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintVertical_weight="1"/>

  <Button
    android:id="@+id/bt_10"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toTopOf="@id/bt_20"
    app:layout_constraintEnd_toStartOf="@+id/bt_11"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bt_00"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintVertical_weight="1"/>

  <Button
    android:id="@+id/bt_11"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toTopOf="@id/bt_21"
    app:layout_constraintEnd_toStartOf="@+id/bt_12"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@id/bt_10"
    app:layout_constraintTop_toBottomOf="@+id/bt_01"
    app:layout_constraintVertical_weight="1"/>

  <Button
    android:id="@+id/bt_12"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toTopOf="@id/bt_22"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@id/bt_11"
    app:layout_constraintTop_toBottomOf="@+id/bt_02"
    app:layout_constraintVertical_weight="1"/>

  <Button
    android:id="@+id/bt_20"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="84dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/bt_21"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bt_10"
    app:layout_constraintVertical_weight="1"/>

  <Button
    android:id="@+id/bt_21"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="84dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/bt_22"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@id/bt_20"
    app:layout_constraintTop_toBottomOf="@+id/bt_11"
    app:layout_constraintVertical_weight="1"/>

  <Button
    android:id="@+id/bt_22"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="84dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#D3CACA"
    android:freezesText="true"
    android:textColor="#0C0C0C"
    android:textSize="60sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@id/bt_21"
    app:layout_constraintTop_toBottomOf="@+id/bt_12"
    app:layout_constraintVertical_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>